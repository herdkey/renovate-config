{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  // Shared defaults
  extends: ["config:recommended"],
  timezone: "America/Los_Angeles",

  labels: ["deps"],
  dependencyDashboard: true,
  prHourlyLimit: 4,
  prConcurrentLimit: 10,
  rebaseWhen: "behind-base-branch",
  rangeStrategy: "bump",
  automerge: false,

  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 2am on sunday"],
  },

  packageRules: [
    {
      "matchManagers": ["github-actions", "renovate-config-presets"],
      "matchCurrentValue": "/^v\\d+$/",
      "allowedVersions": "/^v\\d+$/",
      "pinDigests": false,
      "description": "If a workflow uses @vN, only offer upgrades to other @vN (i.e., new majors). Ignore vN.x.y."
    }
  ],
}
