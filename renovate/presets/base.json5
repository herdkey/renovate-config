{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  // Shared defaults
  extends: ["config:recommended"],
  timezone: "America/Los_Angeles",

  labels: ["deps"],
  dependencyDashboard: true,
  prHourlyLimit: 4,
  prConcurrentLimit: 10,
  rebaseWhen: "behind-base-branch",
  rangeStrategy: "bump",
  automerge: false,

  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 2am on sunday"],
  },

  packageRules: [
    {
      matchPackageNames: ["herdkey/renovate-config"],
      matchCurrentValue: "/^v\\d+$/",
      enabled: false,
      description: "Donâ€™t upgrade floating major tags (#v1) in renovate extends",
    },
  ],
}
